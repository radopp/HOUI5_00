<mvc:View
    controllerName="at.clouddna.training00.zhoui5.controller.Customer"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.uxap"
>
    <u:ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <u:headerTitle>
            <u:ObjectPageDynamicHeaderTitle>
                <u:expandedHeading>
                    <Title text="Kundendetails" />
                </u:expandedHeading>
                <u:actions>
                    <Button
                        text="{i18n>edit}"
                        press="onEditPress"
                        visible="{= !${viewModel>/editMode}}"
                    />
                </u:actions>
            </u:ObjectPageDynamicHeaderTitle>
        </u:headerTitle>
        <u:sections />
        <u:footer>
            <Toolbar
                visible="true"
                id="app_bar_footer"
            >
                <ToolbarSpacer />
                <Button
                    id="app_save_button"
                    text="{i18n>save}"
                    type="Accept"
                    icon="sap-icon://save"
                    press="onSavePress"
                    visible="{viewModel>/editMode}"
                />
                <Button
                    id="app_cancel_button"
                    text="{i18n>cancel}"
                    type="Reject"
                    icon="sap-icon://cancel"
                    press="onCancelPress"
                    visible="{viewModel>/editMode}"
                />
            </Toolbar>
        </u:footer>
    </u:ObjectPageLayout>
</mvc:View>
