<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.uxap"
>
    <u:ObjectPageSection>
        <u:subSections>
            <u:ObjectPageSubSection>
                <u:blocks>
                    <f:SimpleForm title="{Firstname} {Lastname}">
                        <Label
                            text="{i18n>app.customerid}"
                            labelFor="customerid"
                        />
                        <Text
                            id="customerid"
                            text="{Customerid}"
                        />
                        <Label
                            text="{i18n>app.firstname}"
                            labelFor="firstname"
                        />
                        <Text
                            id="firstname"
                            text="{Firstname}"
                        />
                        <Label
                            text="{i18n>app.lastname}"
                            labelFor="lastname"
                        />
                        <Text
                            id="lastname"
                            text="{Lastname}"
                        />
                        <Label
                            text="{i18n>app.title}"
                            labelFor="title"
                        />
                        <Text
                            id="title"
                            text="{Title}"
                        />
                        <Label
                            text="{i18n>app.gender}"
                            labelFor="gender"
                        />
                        <Text
                            id="gender"
                            text="{path: 'Gender', formatter: '.formatter.gender'}"
                        />
                        <Label
                            text="{i18n>app.email}"
                            labelFor="email"
                        />
                        <Text
                            id="email"
                            text="{Email}"
                        />
                        <Label
                            text="{i18n>app.phone}"
                            labelFor="phone"
                        />
                        <Text
                            id="phone"
                            text="{Phone}"
                        />
                        <Label
                            text="{i18n>app.website}"
                            labelFor="website"
                        />
                        <Text
                            id="website"
                            text="{Website}"
                        />
                        <Label
                            text="{i18n>app.birthdate}"
                            labelFor="birthdate"
                        />
                        <Text
                            id="birthdate"
                            text="{path: 'Birthdate', type: 'sap.ui.model.odata.type.DateTime',  formatOptions: {  
    pattern : 'd. MMM YYYY'
  }}"
                        />
                    </f:SimpleForm>
                </u:blocks>
            </u:ObjectPageSubSection>
        </u:subSections>
    </u:ObjectPageSection>
</core:FragmentDefinition>
